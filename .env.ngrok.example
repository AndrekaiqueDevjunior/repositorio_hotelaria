# Configuracao para uso com Ngrok
# Copie este arquivo para .env e atualize com as URLs do ngrok

# ============================================
# BACKEND - Configuracoes CORS e Cookies
# ============================================

# URLs permitidas no CORS (separadas por virgula)
# IMPORTANTE: Atualizar com as URLs do ngrok a cada nova sessao
CORS_ORIGINS=http://localhost:3000,https://frontend-xyz.ngrok-free.app,https://backend-abc.ngrok-free.app

# Configuracao de Cookies para Ngrok (HTTPS)
COOKIE_DOMAIN=
COOKIE_SECURE=true
COOKIE_SAMESITE=none
COOKIE_HTTPONLY=true
COOKIE_MAX_AGE=604800
COOKIE_NAME=hotel_auth_token

# ============================================
# Outras configuracoes (manter do .env original)
# ============================================

DATABASE_URL=postgresql://user:password@postgres:5432/hotel_db
SECRET_KEY=hotel-real-cabo-frio-secret-key
ENVIRONMENT=development

# Cielo (manter configuracao existente)
CIELO_MERCHANT_ID=seu-merchant-id
CIELO_MERCHANT_KEY=sua-merchant-key
CIELO_MODE=sandbox

# Redis (manter configuracao existente)
REDIS_HOST=redis
REDIS_PORT=6379

# Celery (manter configuracao existente)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
