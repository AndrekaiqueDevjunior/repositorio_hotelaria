# ============================================================
# Variaveis de Ambiente - Sistema Hotel Cabo Frio
# ============================================================
# IMPORTANTE: Copie este arquivo para .env antes de usar
# cp env.docker.example .env
# ============================================================

# ============================================================
# DATABASE - PostgreSQL
# ============================================================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/hotel_cabo_frio
DB_ECHO=false

# ============================================================
# JWT / AUTENTICACAO
# ============================================================
SECRET_KEY=sua-chave-secreta-super-segura-mude-isso-em-producao-12345678
JWT_SECRET_KEY=sua-chave-jwt-secreta-super-segura-mude-isso-em-producao-12345678
JWT_ALGORITHM=HS256
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ACCESS_TOKEN_EXPIRE_HOURS=24

# ============================================================
# COOKIE SETTINGS
# ============================================================
COOKIE_NAME=hotel_session
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# ============================================================
# CIELO (Gateway de Pagamento)
# ============================================================
# IMPORTANTE: Coloque suas credenciais reais da Cielo aqui
CIELO_MERCHANT_ID=seu-merchant-id-aqui
CIELO_MERCHANT_KEY=sua-merchant-key-aqui
CIELO_SANDBOX_URL=https://apisandbox.cieloecommerce.cielo.com.br/
CIELO_API_URL=https://api.cieloecommerce.cielo.com.br/
CIELO_MODE=sandbox
CIELO_TIMEOUT_MS=8000

# ============================================================
# REDIS
# ============================================================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================================
# CELERY (Tarefas Assincronas)
# ============================================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ============================================================
# APLICACAO
# ============================================================
APP_NAME=Hotel Real Cabo Frio
APP_ENV=development
PROJECT_NAME=Hotel Real Cabo Frio
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api/v1
DESCRIPTION=Sistema de Gestao Hoteleira - Arquitetura Modular
PRISMA_LOG_QUERIES=true

# ============================================================
# ADMIN
# ============================================================
ADMIN_EMAIL=admin@hotelreal.com.br
ADMIN_PASSWORD=admin123

# ============================================================
# ANTIFRAUDE
# ============================================================
ANTIFRAUDE_RISK_THRESHOLD_AUTO=30
ANTIFRAUDE_RISK_THRESHOLD_REJECT=70

# ============================================================
# FRONTEND
# ============================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development

# ============================================================
# CORS - URLs Permitidas (Adicione ngrok URLs aqui)
# ============================================================
# Exemplo: CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://abcd-1234.ngrok-free.app
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
ALLOWED_HOSTS=*

# ============================================================
# NGROK (Acesso Externo)
# ============================================================
# Cole seu authtoken do ngrok aqui (obtenha em: https://dashboard.ngrok.com/get-started/your-authtoken)
# Deixe vazio se nao for usar ngrok
NGROK_AUTHTOKEN=

# ============================================================
# PGADMIN (Opcional)
# ============================================================
PGADMIN_DEFAULT_EMAIL=admin@hotel.com
PGADMIN_DEFAULT_PASSWORD=admin123

# ============================================================
# INSTRUCOES DE USO
# ============================================================
# 
# 1. CONFIGURACAO BASICA (Primeira Vez):
#    - Copie este arquivo: cp env.docker.example .env
#    - Edite o arquivo .env com suas configuracoes reais
#    - IMPORTANTE: Configure CIELO_MERCHANT_ID e CIELO_MERCHANT_KEY
#
# 2. SEGURANCA:
#    - Mude SECRET_KEY e JWT_SECRET_KEY para valores aleatorios
#    - Gerar chave segura: python -c "import secrets; print(secrets.token_urlsafe(32))"
#    - Mude ADMIN_PASSWORD para uma senha forte
#
# 3. CIELO:
#    - Obtenha suas credenciais em: https://www.cielo.com.br/
#    - Para testes: Use CIELO_MODE=sandbox
#    - Para producao: Use CIELO_MODE=production e credenciais reais
#
# 4. NGROK (Acesso Externo):
#    - Obtenha authtoken em: https://dashboard.ngrok.com/get-started/your-authtoken
#    - Cole o token em NGROK_AUTHTOKEN
#    - Inicie com: docker-compose --profile ngrok up -d
#    - Acesse dashboard: http://localhost:4040
#    - Copie URLs publicas e adicione ao CORS_ORIGINS
#    - Reinicie backend: docker-compose restart backend
#
# 5. INICIAR SISTEMA:
#    - Local: docker-compose up -d
#    - Com ngrok: docker-compose --profile ngrok up -d
#    - Com script: .\iniciar_docker_ngrok.ps1
#
# ============================================================
